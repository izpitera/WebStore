@model WebStore.Models.Employee

@{
    Layout = "_LayoutEmployees";
    ViewData["Title"] = $"Сотрудник id:{Model.Id}";
}

<div>
    <h3>Сотрудник</h3>
 
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>

        <dt>Фамилия</dt>
        <dd>@Model.LastName</dd>

        <dt>Имя</dt>
        <dd>@Model.FirstName</dd>

        <dt>Отчество</dt>
        <dd>@Model.Patronymic</dd>

        <dt>Возраст</dt>
        <dd>@Model.Age</dd>

        <dt>Пол</dt>
        <dd>@Model.Sex</dd>

        <dt>Граждантство</dt>
        <dd>@Model.Citizenship</dd>

        <dt>Зарплата</dt>
        <dd>@Model.Salary</dd>
    </dl>
    <hr />
    <a asp-action="Index" class="btn btn-default">К списку</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>
</div>
